<UserControl x:Class="ZeusTPV.Views.SelectionControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZeusTPV.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Width="406"
             Height="568"
             Background="#F6FCFF"
             Margin="0"
             Padding="0">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88" />
            <RowDefinition Height="480" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="0"
                    Grid.Row="0"
                    Content="File Select"
                    Background="#3A7CC1"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Height="40"
                    Click="FileSelectButton_Click" />
            <Button Grid.Column="0"
                    Grid.Row="1"
                    Content="Pos Select"
                    Background="#3A7CC1"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Height="40"
                    Click="PosSelectButton_Click" />
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="calib_teach"
                       FontWeight="Bold"
                       Padding="10"
                       FontSize="18" />
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Text="Position Data Name"
                       FontWeight="Bold"
                       FontSize="18"
                       Padding="10" />
        </Grid>

        <ContentControl Grid.Row="1"
                        x:Name="SelectionControlContent">
            <d:ContentControl.Content>
                <local:FilesListView />
            </d:ContentControl.Content>
        </ContentControl>



    </Grid>
</UserControl>
