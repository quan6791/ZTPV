<UserControl x:Class="ZeusTPV.Views.IOControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZeusTPV.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Width="406"
             Height="96"
             Background="#F6FCFF"
             Margin="0"
             Padding="0">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <UniformGrid Columns="4"
                         Rows="2"
                         Margin="10,10,10,0">
                <CheckBox Content="OUT 1" />
                <CheckBox Content="OUT 2" />
                <CheckBox Content="OUT 3" />
                <CheckBox Content="OUT 4" />
                <CheckBox Content="OUT 5" />
                <CheckBox Content="OUT 6" />
                <CheckBox Content="OUT 7" />
                <CheckBox Content="OUT 8" />
            </UniformGrid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,5,10,0">
                <Button Width="40"
                        Height="40"
                        Padding="0">
                    <materialDesign:PackIcon Kind="TriangleDown"
                                             Width="24"
                                             Height="24">
                        <materialDesign:PackIcon.RenderTransform>
                            <RotateTransform Angle="180"
                                             CenterX="12"
                                             CenterY="12" />
                        </materialDesign:PackIcon.RenderTransform>
                    </materialDesign:PackIcon>
                </Button>
                <Button Width="40"
                        Height="40"
                        Padding="0">
                    <materialDesign:PackIcon Kind="TriangleDown"
                                             Width="24"
                                             Height="24">
                    </materialDesign:PackIcon>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
