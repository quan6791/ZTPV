<UserControl x:Class="ZeusTPV.Views.MoveToMotionControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZeusTPV.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Width="670"
             Height="600"
             Background="#F6FCFF"
             Margin="0"
             Padding="0">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Button Styles -->
            <Style x:Key="ActionButtonStyle"
                   TargetType="Button">
                <Setter Property="Background"
                        Value="#4285F4" />
                <Setter Property="Foreground"
                        Value="White" />
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="BorderThickness"
                        Value="0" />
                <Setter Property="Width"
                        Value="200" />
                <Setter Property="Height"
                        Value="50" />
                <Setter Property="Margin"
                        Value="10" />
                <Setter Property="Cursor"
                        Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#3367D6" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#2E5BC7" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="LargeActionButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource ActionButtonStyle}">
                <Setter Property="Width"
                        Value="120" />
                <Setter Property="Height"
                        Value="120" />
                <Setter Property="FontSize"
                        Value="14" />
            </Style>
            <Style x:Key="RadioButtonStyle"
                   TargetType="RadioButton">
                <Setter Property="FontSize"
                        Value="20" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="Foreground"
                        Value="#333333" />
                <Setter Property="Margin"
                        Value="15,5" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- Custom Radio Circle -->
                                <Grid Grid.Column="0"
                                      Width="30"
                                      Height="30"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center">
                                    <!-- Outer Circle Border -->
                                    <Ellipse Fill="White"
                                             Stroke="#4285F4"
                                             StrokeThickness="3"
                                             Width="30"
                                             Height="30" />
                                    <!-- Inner Circle (Checked State) -->
                                    <Ellipse Name="InnerCircle"
                                             Fill="#4285F4"
                                             Width="18"
                                             Height="18"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Visibility="Collapsed" />
                                </Grid>
                                <!-- Text Content -->
                                <ContentPresenter Grid.Column="1"
                                                  Content="{TemplateBinding Content}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="Left"
                                                  TextBlock.FontSize="{TemplateBinding FontSize}"
                                                  TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                                  TextBlock.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                            <!-- Triggers for Checked/Unchecked States -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked"
                                         Value="True">
                                    <Setter TargetName="InnerCircle"
                                            Property="Visibility"
                                            Value="Visible" />
                                </Trigger>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="InnerCircle"
                                            Property="Fill"
                                            Value="#3367D6" />
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter Property="Foreground"
                                            Value="#AAAAAA" />
                                    <Setter TargetName="InnerCircle"
                                            Property="Fill"
                                            Value="#CCCCCC" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="SectionHeaderStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="20" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="Foreground"
                        Value="#333333" />
                <Setter Property="Margin"
                        Value="20,10,10,5" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#F6FCFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <!-- Coordinate Selection -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="20,20,0,10">
            <TextBlock Text="Coordinate"
                       Style="{StaticResource SectionHeaderStyle}" />
            <RadioButton Name="rbXYCoord"
                         Content="XY Coord"
                         Style="{StaticResource RadioButtonStyle}"
                         Margin="40,5,15,5" />
            <RadioButton Name="rbJointCoord"
                         Content="Joint Coord"
                         Style="{StaticResource RadioButtonStyle}"
                         IsChecked="True" />
        </StackPanel>
        <!-- Path Planning Selection -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="20,0,0,20">
            <TextBlock Text="Path Planning"
                       Style="{StaticResource SectionHeaderStyle}" />
            <RadioButton Name="rbLinearMoveTo"
                         Content="Linear MoveTo"
                         Style="{StaticResource RadioButtonStyle}"
                         Margin="15,5,15,5" />
            <RadioButton Name="rbPTPMoveTo"
                         Content="PTP MoveTo"
                         Style="{StaticResource RadioButtonStyle}"
                         IsChecked="True" />
        </StackPanel>
        <!-- Action Buttons -->
        <Grid Grid.Row="2"
              Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Name="btnBack"
                    Style="{StaticResource ActionButtonStyle}"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="↶"
                               FontSize="20"
                               Margin="0,0,10,0" />
                    <TextBlock Text="Back" />
                </StackPanel>
            </Button>
            <Button Grid.Column="1"
                    Name="btnMoveToTarget"
                    Style="{StaticResource ActionButtonStyle}"
                    HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚡"
                               FontSize="18"
                               Margin="0,0,10,0" />
                    <TextBlock Text="MoveTo Target" />
                </StackPanel>
            </Button>
        </Grid>
        <!-- Large Action Buttons -->
        <Grid Grid.Row="3"
              Margin="20,0,20,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Home Position Button -->
            <Button Grid.Column="0"
                    Name="btnHomePosition"
                    Style="{StaticResource LargeActionButtonStyle}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="🏠"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5" />
                    <TextBlock Text="Home"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Position"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Button>
            <!-- Encoder Reset Position Button -->
            <Button Grid.Column="1"
                    Name="btnEncoderReset"
                    Style="{StaticResource LargeActionButtonStyle}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="🔄"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5" />
                    <TextBlock Text="Encoder"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Reset Position"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Button>
            <!-- Hand Alignment Button -->
            <Button Grid.Column="2"
                    Name="btnHandAlignment"
                    Style="{StaticResource LargeActionButtonStyle}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="✋"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5" />
                    <TextBlock Text="Hand"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Alignment"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
