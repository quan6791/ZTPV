<UserControl x:Class="ZeusTPV.Views.TeachingDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZeusTPV.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Width="406"
             Height="480"
             Background="#F6FCFF"
             Margin="0"
             Padding="0">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Button Style -->
            <Style x:Key="TabButtonStyle"
                   TargetType="Button">
                <Setter Property="Background"
                        Value="#4472C4" />
                <Setter Property="Foreground"
                        Value="White" />
                <Setter Property="BorderThickness"
                        Value="0" />
                <Setter Property="Padding"
                        Value="15,8" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="12" />
                <Setter Property="Cursor"
                        Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background"
                                Value="#5A7FD8" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Selected Row Style -->
            <Style x:Key="SelectedRowStyle"
                   TargetType="DataGridRow">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected}"
                                 Value="True">
                        <Setter Property="Background"
                                Value="#4472C4" />
                        <Setter Property="Foreground"
                                Value="White" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- DataGrid Style -->
            <Style x:Key="CustomDataGridStyle"
                   TargetType="DataGrid">
                <Setter Property="Background"
                        Value="White" />
                <Setter Property="GridLinesVisibility"
                        Value="All" />
                <Setter Property="HorizontalGridLinesBrush"
                        Value="#E0E0E0" />
                <Setter Property="VerticalGridLinesBrush"
                        Value="#E0E0E0" />
                <Setter Property="HeadersVisibility"
                        Value="Column" />
                <Setter Property="CanUserAddRows"
                        Value="False" />
                <Setter Property="CanUserDeleteRows"
                        Value="False" />
                <Setter Property="CanUserReorderColumns"
                        Value="False" />
                <Setter Property="CanUserResizeRows"
                        Value="False" />
                <Setter Property="SelectionMode"
                        Value="Single" />
                <Setter Property="AutoGenerateColumns"
                        Value="False" />
            </Style>

            <!-- Header Style -->
            <Style x:Key="DataGridHeaderStyle"
                   TargetType="DataGridColumnHeader">
                <Setter Property="Background"
                        Value="#F8F9FA" />
                <Setter Property="Foreground"
                        Value="Black" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="11" />
                <Setter Property="Padding"
                        Value="8,5" />
                <Setter Property="BorderBrush"
                        Value="#E0E0E0" />
                <Setter Property="BorderThickness"
                        Value="0,0,1,1" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- Data Grid -->
        <DataGrid Grid.Row="0"
                  x:Name="TeachDataGrid"
                  ItemsSource="{Binding DisplayRecords}"
                  Style="{StaticResource CustomDataGridStyle}"
                  RowStyle="{StaticResource SelectedRowStyle}"
                  Margin="0,1,0,0"
                  SelectionChanged="TeachDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index"
                                    Binding="{Binding Index, StringFormat='0000'}"
                                    Width="60"
                                    HeaderStyle="{StaticResource DataGridHeaderStyle}"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                            <Setter Property="Padding"
                                    Value="5" />
                            <Setter Property="FontFamily"
                                    Value="Consolas" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Position Name"
                                    Binding="{Binding PositionName}"
                                    Width="120"
                                    HeaderStyle="{StaticResource DataGridHeaderStyle}"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding"
                                    Value="8,5" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Type"
                                    Binding="{Binding DataType}"
                                    Width="80"
                                    HeaderStyle="{StaticResource DataGridHeaderStyle}"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                            <Setter Property="Padding"
                                    Value="5" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Replace Date"
                                    Binding="{Binding ReplaceDateTime}"
                                    Width="*"
                                    HeaderStyle="{StaticResource DataGridHeaderStyle}"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding"
                                    Value="8,5" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="FontSize"
                                    Value="10" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom ComboBox -->
        <!--
        <ComboBox Grid.Row="1"
                  x:Name="DescriptionComboBox"
                  Margin="10"
                  Height="25"
                  SelectedIndex="0">
            <ComboBoxItem Content="Source description order" />
            <ComboBoxItem Content="Alphabetical order" />
            <ComboBoxItem Content="Type order" />
            <ComboBoxItem Content="Replace date order" />
        </ComboBox>-->

        <Button Grid.Row="1"
                Margin="0,10"
                Content="OK"
                Click="ShowPositionDetail_Click" />
    </Grid>
</UserControl>
