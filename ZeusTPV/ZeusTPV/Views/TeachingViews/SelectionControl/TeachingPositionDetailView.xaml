                    <TextBlock Grid.Row="5"
                               Grid.Column="1"
                               Text="{Binding CurrentPosition.Rx, StringFormat=F3}"
                               Style="{StaticResource ValueTextStyle}" />
                </Grid>

                <!-- Posture -->
                <Grid Grid.Row="2"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
