        <!-- Right column - Current Position -->
        <Border Grid.Column="2"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10"
                Background="White"
                Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Current Position"
                           Style="{StaticResource HeaderTextStyle}" />

                <!-- Position Values -->
                <Grid Grid.Row="1"
                      Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- X -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="J1:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding CurrentPosition.X, StringFormat=F3}"
                               Style="{StaticResource ValueTextStyle}" />

                    <!-- Y -->
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="J2:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding CurrentPosition.Y, StringFormat=F3}"
                               Style="{StaticResource ValueTextStyle}" />

                    <!-- Z -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="J3:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="{Binding CurrentPosition.Z, StringFormat=F3}"
                               Style="{StaticResource ValueTextStyle}" />

                    <!-- Rz -->
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="J4:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="{Binding CurrentPosition.Rz, StringFormat=F3}"
