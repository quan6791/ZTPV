                    <TextBlock Grid.Column="1"
                               Text="{Binding CurrentPosition.CC}"
                               Style="{StaticResource ValueTextStyle}" />
                </Grid>
            </Grid>
        </Border>


        <ComboBox Grid.Row="1"
                  Grid.Column="0"
                  Margin="10"
                  Height="25"
                  SelectedIndex="0">
            <ComboBoxItem Content="Position (XY)" />
            <ComboBoxItem Content="Joint(J1..J6)" />
        </ComboBox>

        <Button Grid.Row="1"
                Grid.Column="2"
                Margin="0,10"
                Content="Replace" />
    </Grid>
</UserControl>
