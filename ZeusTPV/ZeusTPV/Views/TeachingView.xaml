<UserControl x:Class="ZeusTPV.Views.TeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZeusTPV.Views"
             mc:Ignorable="d"
             Width="1140"
             Height="700"
             Background="#F6FCFF"
             Margin="0"
             Padding="0">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <!-- Custom Button Style Template -->
            <Style x:Key="ImageButtonStyle"
                   TargetType="Button">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="BorderThickness"
                        Value="0" />
                <Setter Property="Padding"
                        Value="0" />
                <Setter Property="Cursor"
                        Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    x:Name="border">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  x:Name="contentPresenter">
                                    <ContentPresenter.RenderTransform>
                                        <ScaleTransform x:Name="scaleTransform"
                                                        ScaleX="1"
                                                        ScaleY="1" />
                                    </ContentPresenter.RenderTransform>
                                    <ContentPresenter.RenderTransformOrigin>
                                        <Point X="0.5"
                                               Y="0.5" />
                                    </ContentPresenter.RenderTransformOrigin>
                                </ContentPresenter>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="Transparent" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="Transparent" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.1"
                                                                 Duration="0:0:0.1" />
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.1"
                                                                 Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.0"
                                                                 Duration="0:0:0.1" />
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.0"
                                                                 Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- LEFT PANEL:  FILE SELECTION CONTROL PANEL/ IO PANEL -->
        <Border Grid.Column="0"
                Background="#FFF"
                BorderBrush="#B3D1F7"
                BorderThickness="2"
                CornerRadius="10"
                Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="568" />
                    <RowDefinition Height="96" />
                </Grid.RowDefinitions>

                <ContentControl Grid.Row="0"
                                x:Name="TeachingLeftUpContent">
                    <d:ContentControl.Content>
                        <local:SelectionControlView />
                    </d:ContentControl.Content>

                </ContentControl>
                <ContentControl Grid.Row="1"
                                x:Name="TeachingLeftDownContent">
                    <d:ContentControl.Content>
                        <local:IOControlView />
                    </d:ContentControl.Content>
                </ContentControl>
            </Grid>
        </Border>
        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="630" />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0"
                            x:Name="TeachingRightUpContent">
                <d:ContentControl.Content>
                    <local:ParamsControlView />
                </d:ContentControl.Content>

            </ContentControl>


            <ContentControl Grid.Row="1"
                            x:Name="TeachingRightDownContent">

                <d:ContentControl.Content>
                    <local:MotionControlView />
                </d:ContentControl.Content>
            </ContentControl>

        </Grid>
    </Grid>

</UserControl>
