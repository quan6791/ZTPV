<Window x:Class="ZeusTPV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeusTPV"
        mc:Ignorable="d"
        Title="Teaching Pendant"
        Height="768"
        Width="1188"
        Background="#F6FCFF">
    <Grid>
        <!-- Left Sidebar -->
        <Grid Background="#3A7CC1"
              Width="120"
              HorizontalAlignment="Left">
            <StackPanel Margin="0,10,0,0">
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        HorizontalContentAlignment="Center"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_home.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Home"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="#1E90FF"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Teaching"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_setting_disable.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Setting"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_jog_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Jog"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_IO_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="IO"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_viewer_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Viewer"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Top Bar -->
        <Grid Height="60"
              VerticalAlignment="Top"
              Margin="120,0,0,0"
              Background="#E6F0FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Margin="10,10,10,10"
                     Height="40"
                     FontSize="18" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <TextBlock Text="Controller Status"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" />
                <Border Background="#FFF"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10,2"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="EQ2"
                                   Foreground="Red"
                                   FontWeight="Bold" />
                        <TextBlock Text="Error in 'init.py'"
                                   FontSize="12" />
                    </StackPanel>
                </Border>
                <Button Content="R S T"
                        Width="60"
                        Height="30"
                        Margin="2" />
            </StackPanel>
            <Image Grid.Column="2"
                   Source="/image/Main/logo.png"
                   Height="40"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0" />
        </Grid>
        <!-- Main Content -->
        <Grid Margin="120,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- File Select Panel -->
            <Border Grid.Row="2"
                    Background="#FFF"
                    BorderBrush="#B3D1F7"
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="10">
                <Grid Grid.Column="0"
                      Background="#F6FCFF"
                      Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0"
                                Grid.Row="0"
                                Content="File Select"
                                Background="#3A7CC1"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="16"
                                Height="40" />
                        <Button Grid.Column="0"
                                Grid.Row="1"
                                Content="Pos Select"
                                Background="#E6E6E6"
                                Foreground="#888"
                                FontWeight="Bold"
                                FontSize="16"
                                Height="40"
                                IsEnabled="False" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="calib_teach"
                                   FontWeight="Bold"
                                   Padding="10"
                                   FontSize="18" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Text="Position Data Name"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Padding="10" />
                    </Grid>
                    <StackPanel Grid.Row="1">
                        <ListBox MinHeight="300"
                                 Margin="10,10,10,0">
                            <ListBoxItem Content="01. __init__" />
                            <ListBoxItem Content="02. calib_teach" />
                            <ListBoxItem Content="03. init" />
                            <ListBoxItem Content="04. init_util" />
                            <ListBoxItem Content="05. io_test" />
                            <ListBoxItem Content="06. main" />
                            <ListBoxItem Content="07. network" />
                            <ListBoxItem Content="08. network_Test_client" />
                            <ListBoxItem Content="09. siltest" />
                            <ListBoxItem Content="10. tp_1" />
                            <ListBoxItem Content="11. twim_test" />
                        </ListBox>
                        <Button Content="OK"
                                Height="40"
                                Margin="10,10,10,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <UniformGrid Columns="4"
                                     Rows="2"
                                     Margin="10,10,10,0">
                            <CheckBox Content="OUT 1" />
                            <CheckBox Content="OUT 2" />
                            <CheckBox Content="OUT 3" />
                            <CheckBox Content="OUT 4" />
                            <CheckBox Content="OUT 5" />
                            <CheckBox Content="OUT 6" />
                            <CheckBox Content="OUT 7" />
                            <CheckBox Content="OUT 8" />
                        </UniformGrid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,10,0">
                            <Button Content="▲"
                                    Width="40"
                                    Height="40" />
                            <Button Content="▼"
                                    Width="40"
                                    Height="40" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Right Panel -->
            <Grid Grid.Column="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <Button Content="Speed"
                            Background="#E6E6E6"
                            Foreground="#888"
                            FontWeight="Bold"
                            Width="70"
                            Height="30" />
                    <Button Content="Pitch"
                            Background="#3A7CC1"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="70"
                            Height="30" />
                    <TextBox Text="40"
                             Width="50"
                             Height="30"
                             Margin="10,0,0,0"
                             FontSize="16" />
                    <Slider Width="400"
                            Height="30"
                            Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <Button Content="XY"
                            Background="#3A7CC1"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="70"
                            Height="30" />
                    <Button Content="Joint"
                            Background="#E6E6E6"
                            Foreground="#888"
                            FontWeight="Bold"
                            Width="70"
                            Height="30" />
                    <Button Content="MoveTo"
                            Background="#E6E6E6"
                            Foreground="#888"
                            FontWeight="Bold"
                            Width="70"
                            Height="30" />
                    <Button Content="Path Check"
                            Background="#E6E6E6"
                            Foreground="#888"
                            FontWeight="Bold"
                            Width="100"
                            Height="30" />
                </StackPanel>
                <!-- Placeholder for the graphic controls (arrows, rotation, etc.) -->
                <Border Grid.Row="2"
                        Background="#FFF"
                        BorderBrush="#B3D1F7"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="0,0,0,0">
                    <Canvas>
                        <!-- Vòng xoay Rz (xanh dương - bên trái) -->
                        <Image Source="/image/XYZ/RzBackgrnd.png"
                               Width="150"
                               Height="150"
                               Canvas.Left="30"
                               Canvas.Top="10" />
                        <Button Canvas.Left="20"
                                Canvas.Top="120"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0">
                            <Image Source="/image/XYZ/RzpBtn.png"
                                   Stretch="Fill" />
                        </Button>
                        <Button Canvas.Left="140"
                                Canvas.Top="120"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0">
                            <Image Source="/image/XYZ/RzmBtn.png"
                                   Stretch="Fill" />
                        </Button>
                        <!-- Vòng xoay Ry (xanh lá - giữa) -->
                        <Image Source="/image/XYZ/RyBackgrnd.png"
                               Width="150"
                               Height="150"
                               Canvas.Left="210"
                               Canvas.Top="10" />
                        <Image Source="/image/XYZ/RypBtn.png"
                               Width="40"
                               Height="40"
                               Canvas.Left="230"
                               Canvas.Top="120" />
                        <Image Source="/image/XYZ/RymBtn.png"
                               Width="40"
                               Height="40"
                               Canvas.Left="200"
                               Canvas.Top="60" />
                        <!-- Vòng xoay Rx (đỏ - bên phải) -->
                        <Image Source="/image/XYZ/RxBackgrnd.png"
                               Width="150"
                               Height="150"
                               Canvas.Left="390"
                               Canvas.Top="10" />
                        <Image Source="/image/XYZ/RxpBtn.png"
                               Width="40"
                               Height="40"
                               Canvas.Left="480"
                               Canvas.Top="120" />
                        <Image Source="/image/XYZ/RxmBtn.png"
                               Width="40"
                               Height="40"
                               Canvas.Left="530"
                               Canvas.Top="40" />
                        <!-- Mũi tên Z+ (xanh dương - trên bên trái) -->
                        <Image Source="/image/XYZ/Zp.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="80"
                               Canvas.Top="200" />
                        <!-- Mũi tên Z- (xanh dương - dưới bên trái) -->
                        <Image Source="/image/XYZ/Zm.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="80"
                               Canvas.Top="330" />
                        <!-- Mũi tên Y+ (xanh lá - trên giữa) -->
                        <Image Source="/image/XYZ/Yp.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="340"
                               Canvas.Top="200" />
                        <!-- Mũi tên Y- (xanh lá - dưới giữa) -->
                        <Image Source="/image/XYZ/Ym.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="340"
                               Canvas.Top="340" />
                        <!-- Mũi tên X- (đỏ - trái giữa) -->
                        <Image Source="/image/XYZ/Xm.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="240"
                               Canvas.Top="270" />
                        <!-- Mũi tên X+ (đỏ - phải giữa) -->
                        <Image Source="/image/XYZ/Xp.png"
                               Width="100"
                               Height="100"
                               Canvas.Left="430"
                               Canvas.Top="270" />
                    </Canvas>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
