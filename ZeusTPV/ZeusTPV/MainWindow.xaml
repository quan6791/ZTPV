<Window x:Class="ZeusTPV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeusTPV"
        mc:Ignorable="d"
        Title="Teaching Pendant"
        Height="800"
        Width="1280"
        Background="#F6FCFF">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- LEFT SIDEBAR-->
        <Grid Background="#3A7CC1"
              Width="120"
              HorizontalAlignment="Left">
            <StackPanel Margin="0,10,0,0">
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        HorizontalContentAlignment="Center"
                        BorderThickness="0"
                        Click="HomeButton_Click">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_home.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Home"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="#1E90FF"
                        BorderThickness="0"
                        Click="TeachingButton_Click">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Teaching"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_setting_disable.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Setting"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_jog_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Jog"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_IO_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="IO"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="60"
                        Margin="10,0,10,10"
                        Background="White"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/image/Button_icon/button_icon_menu_teaching_viewer_sel.png"
                               Height="32"
                               Width="32" />
                        <TextBlock Text="Viewer"
                                   Foreground="Black"
                                   FontWeight="Bold"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!-- TOP BAR -->
        <Grid Height="60"
              VerticalAlignment="Top"
              Margin="120,0,0,0"
              Background="#E6F0FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Margin="10,10,10,10"
                    Height="40" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <TextBlock Text="Controller Status"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" />
                <Border Background="#FFF"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10,2"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="EQ2"
                                   Foreground="Red"
                                   FontWeight="Bold" />
                        <TextBlock Text="Error in 'init.py'"
                                   FontSize="12" />
                    </StackPanel>
                </Border>
                <Button Content="R S T"
                        Width="60"
                        Height="30"
                        Margin="2" />
            </StackPanel>
            <Image Grid.Column="2"
                   Source="/image/Main/logo.png"
                   Height="40"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0" />
        </Grid>
        <!-- MAIN CONTENT -->
        <Grid Margin="120,60,0,0">
            <ContentControl Margin="0"
                            Padding="0"
                            Width="1140"
                            Height="700"
                            x:Name="MainContent" />
        </Grid>
    </Grid>
</Window>
